{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "sourceRoot": "src",
    "removeComments": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts","src/**/**/*.ts","src/*.ts"], 
  "exclude": ["node_modules", "dist"],
  "lib": ["es2015", "esnext"]
}
